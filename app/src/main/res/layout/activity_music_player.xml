<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3C0051"
    tools:context=".MusicPlayerActivity">
    <ImageView
        android:layout_marginTop="5dp"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:id="@+id/img_back"
        android:scaleType="fitXY"
        android:src="@drawable/ic_back_btn"/>

<!--    <ImageView-->
<!--        android:layout_marginTop="5dp"-->
<!--        android:layout_width="30dp"-->
<!--        android:layout_height="30dp"-->
<!--        android:src="@drawable/ic_close_exit"-->
<!--        android:layout_toEndOf="@+id/img_back"-->
<!--        android:layout_marginStart="340dp"-->
<!--        />-->
    <TextView
        android:layout_below="@+id/img_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/song_title"
        android:text="Title of the song"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_margin="10dp"
        android:padding="15dp"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:id="@+id/imgSong"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:layout_below="@id/song_title"
        android:src="@drawable/icon_music" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvArtist"
        android:layout_below="@id/imgSong"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="Artist"/>
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:id="@+id/seekBar"
        android:layout_below="@+id/tvArtist"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/layout_time"
        android:layout_below="@+id/seekBar"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeCurrent"
            android:text="0:00"
            android:textSize="13sp"
            android:textColor="@color/gray"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="280dp"
            android:id="@+id/timeEnd"
            android:text="5:00"
            android:textSize="13sp"
            android:textColor="@color/gray"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_time"
        android:id="@+id/layout_media"
        android:padding="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_skip_previous_24"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:id="@+id/previous"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_skip_next_24"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/next"
             />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_pause_circle_outline_24"
            android:layout_centerInParent="true"
            android:id="@+id/pause_play"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_setMusic"
        android:paddingStart="90dp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/layout_media"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_like"
            android:src="@drawable/ic_baseline_favorite_border_24"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_replay_24"
            android:layout_toEndOf="@+id/img_like"
            android:layout_marginStart="133dp"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_setMusic"
        android:id="@+id/ic_lyrics"
        android:src="@drawable/lyrics"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>