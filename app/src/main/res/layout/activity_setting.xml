<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#3C0051"
    tools:context=".Activities.Setting">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:flow_verticalStyle="spread_inside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/ic_user_24" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_light"
                        android:gravity="center"
                        android:text="Nguyen"
                        android:textColor="#FBFBFB"
                        android:textSize="40sp" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Nguyen"
                        android:textColor="#7AFFFCFC" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#A3FAFAFA"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:paddingTop="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/btnInfoUpdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:clickable="true"
                            app:backgroundTint="#75FCFCFC"
                            tools:srcCompat="@drawable/ic_info_update_setting" />

                        <TextView
                            android:id="@+id/tvInfoUpdate"
                            android:layout_width="67dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Info update"
                            android:textColor="#FFFCFC"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/floatingActionButton2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:clickable="true"
                            app:backgroundTint="#75FCFCFC"
                            tools:srcCompat="@drawable/ic_download_24" />

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="67dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Download quality"
                            android:textColor="#FFFCFC"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="high"
                            android:textColor="#CCFFFFFF"
                            android:textSize="8dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/floatingActionButton2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:clickable="true"
                            app:backgroundTint="#75FCFCFC"
                            tools:srcCompat="@drawable/ic_change_circle_24" />

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="67dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Change Password"
                            android:textColor="#FFFCFC"
                            android:textSize="14sp" />
                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_horizontal"
                    android:paddingTop="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/btnInfoUpdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:clickable="true"
                            app:backgroundTint="#75FCFCFC"
                            tools:srcCompat="@drawable/ic_data_saver_off_24" />

                        <TextView
                            android:id="@+id/tvInfoUpdate"
                            android:layout_width="67dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Info update"
                            android:textColor="#FFFCFC"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/textView17"
                            android:layout_width="67dp"
                            android:layout_height="wrap_content"
                            android:text="On"
                            android:textAlignment="center"
                            android:textColor="#80FFFFFF"
                            android:textSize="8sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/floatingActionButton2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:clickable="true"
                            app:backgroundTint="#75FCFCFC"
                            tools:srcCompat="@drawable/ic_download_over_data" />

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="67dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Download over data"
                            android:textColor="#FFFCFC"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="on"
                            android:textAlignment="center"
                            android:textColor="#80FFFFFF"
                            android:textSize="8dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/floatingActionButton2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:clickable="true"
                            app:backgroundTint="#75FCFCFC"
                            tools:srcCompat="@drawable/ic_connect_to" />

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="67dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Connect to"
                            android:textColor="#FFFCFC"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/textView18"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Device1"
                            android:textAlignment="center"
                            android:textColor="#80FFFFFF"
                            android:textSize="8sp" />
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_horizontal"
                    android:paddingTop="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/btnInfoUpdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:clickable="true"
                            app:backgroundTint="#75FCFCFC"
                            tools:srcCompat="@drawable/ic_info" />

                        <TextView
                            android:id="@+id/tvInfoUpdate"
                            android:layout_width="67dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="About      us"
                            android:textColor="#FFFCFC"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/floatingActionButton2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:clickable="true"
                            app:backgroundTint="#75FCFCFC"
                            tools:srcCompat="@drawable/ic_help" />

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="67dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Help and support"
                            android:textColor="#FFFCFC"
                            android:textSize="14sp" />

                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#0DADADAD"
                        android:text="logout"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF" />
                </TableRow>
            </TableLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/BottomNav"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="#B7AAAAAA"
            android:layerType="software"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="3">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_music_note_24" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_home_24" />

            <ImageView
                android:id="@+id/imgSettingMusicScreen"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_settings_24" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>